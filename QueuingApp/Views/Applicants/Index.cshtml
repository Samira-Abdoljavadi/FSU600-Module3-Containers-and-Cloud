@model IEnumerable<QueuingApp.Models.Applicants>

@{
    ViewData["Title"] = "Applicants List";
}

<h1>Applicants List</h1>

<p>
    <a asp-action="Create">Add New Applicant</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Socialsecuritynumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EMail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Socialsecuritynumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMail)
            </td>
            <td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { Id=item.objectId }) |
                @Html.ActionLink("Details", "Details", new { Id=item.objectId }) |
                @Html.ActionLink("Delete", "Delete", new { Id=item.objectId })
            </td>
        </tr>
}
    </tbody>
</table>
